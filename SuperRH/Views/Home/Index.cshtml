@{
    ViewData["Title"] = "Dashboard Principal";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="fw-bold mb-0">Bem-vindo ao SuperRH</h2>
        <p class="text-muted">Visão geral do sistema de recursos humanos.</p>
    </div>
    <button class="btn btn-primary shadow-sm">
        <i class="bi bi-download me-2"></i> Gerar Relatório
    </button>
</div>

<div class="row g-4 mb-4">
    <div class="col-12 col-sm-6 col-xl-3">
        <div class="card border-0 shadow-sm h-100 border-start border-4 border-primary">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <div class="text-muted small fw-bold text-uppercase">Funcionários</div>
                        <div class="h4 fw-bold mb-0">124</div>
                    </div>
                    <div class="bg-primary bg-opacity-10 p-3 rounded">
                        <i class="bi bi-people text-primary fs-4"></i>
                    </div>
                </div>
                <div class="mt-3 small text-success">
                    <i class="bi bi-arrow-up"></i> 12% desde o mês passado
                </div>
            </div>
        </div>
    </div>

    <div class="col-12 col-sm-6 col-xl-3">
        <div class="card border-0 shadow-sm h-100 border-start border-4 border-success">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <div class="text-muted small fw-bold text-uppercase">Presentes Hoje</div>
                        <div class="h4 fw-bold mb-0">118</div>
                    </div>
                    <div class="bg-success bg-opacity-10 p-3 rounded">
                        <i class="bi bi-calendar-check text-success fs-4"></i>
                    </div>
                </div>
                <div class="mt-3 small text-muted">
                    95% da força de trabalho
                </div>
            </div>
        </div>
    </div>

    <div class="col-12 col-sm-6 col-xl-3">
        <div class="card border-0 shadow-sm h-100 border-start border-4 border-warning">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <div class="text-muted small fw-bold text-uppercase">Férias Próximas</div>
                        <div class="h4 fw-bold mb-0">8</div>
                    </div>
                    <div class="bg-warning bg-opacity-10 p-3 rounded">
                        <i class="bi bi-sun text-warning fs-4"></i>
                    </div>
                </div>
                <div class="mt-3 small text-muted">
                    Próximos 30 dias
                </div>
            </div>
        </div>
    </div>

    <div class="col-12 col-sm-6 col-xl-3">
        <div class="card border-0 shadow-sm h-100 border-start border-4 border-danger">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <div class="text-muted small fw-bold text-uppercase">Pendências</div>
                        <div class="h4 fw-bold mb-0">3</div>
                    </div>
                    <div class="bg-danger bg-opacity-10 p-3 rounded">
                        <i class="bi bi-exclamation-triangle text-danger fs-4"></i>
                    </div>
                </div>
                <div class="mt-3 small text-danger fw-bold">
                    Ajustes de ponto necessários
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card border-0 shadow-sm mb-4">
            <div class="card-header bg-white border-bottom py-3">
                <h6 class="m-0 fw-bold"><i class="bi bi-lightning-charge me-2 text-primary"></i>Ações Rápidas</h6>
            </div>
            <div class="card-body">
                <div class="row g-3">
                    <div class="col-6 col-md-3">
                        <a asp-controller="Funcionarios" asp-action="Index" class="btn btn-outline-secondary w-100 py-3">
                            <i class="bi bi-person-plus d-block fs-3 mb-2"></i> Novo Funci.
                        </a>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Ponto" asp-action="Registro" class="btn btn-outline-secondary w-100 py-3">
                            <i class="bi bi-clock-history d-block fs-3 mb-2"></i> Lançar Ponto
                        </a>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Folha" asp-action="Calculo" class="btn btn-outline-secondary w-100 py-3">
                            <i class="bi bi-calculator d-block fs-3 mb-2"></i> Calcular Folha
                        </a>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Justificativas" asp-action="Index" class="btn btn-outline-secondary w-100 py-3">
                            <i class="bi bi-file-earmark-medical d-block fs-3 mb-2"></i> Atestados
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white border-bottom py-3">
                <h6 class="m-0 fw-bold"><i class="bi bi-bell me-2 text-primary"></i>Comunicados Internos</h6>
            </div>
            <div class="card-body">
                <ul class="list-group list-group-flush">
                    <li class="list-group-item px-0 py-3">
                        <div class="small text-muted">20/01/2026</div>
                        <div class="fw-bold">Manutenção no Sistema</div>
                        <p class="small mb-0">O módulo de folha estará instável entre 18h e 20h.</p>
                    </li>
                    <li class="list-group-item px-0 py-3">
                        <div class="small text-muted">18/01/2026</div>
                        <div class="fw-bold">Novos Planos de Saúde</div>
                        <p class="small mb-0">Atualize as opções de benefícios dos dependentes.</p>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>