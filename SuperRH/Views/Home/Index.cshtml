@{
    ViewData["Title"] = "Dashboard Corporativo";
}

@model SuperRH.Models.DashboardViewModel


<nav aria-label="breadcrumb" class="mb-2">
    <ol class="breadcrumb mb-0">
        <li class="breadcrumb-item small text-uppercase active text-primary fw-bold" aria-current="page">
            <i class="bi bi-grid-1x2-fill me-2"></i>Dashboard Operacional
        </li>
    </ol>
</nav>

<div class="d-flex justify-content-between align-items-end mb-4">
    <div>
        <h2 class="fw-bold mb-0 text-white text-uppercase tracking-tight">Painel de Controle</h2>
        <p class="text-secondary mb-0 small">Bem-vindo, Administrador. Sistema atualizado em tempo real.</p>
    </div>
    <button class="btn btn-outline-primary rounded-0 px-4 py-2 fw-bold text-uppercase small shadow-sm">
        <i class="bi bi-file-earmark-pdf me-2"></i> Exportar BI
    </button>
</div>

<div class="row g-3 mb-4">
    <div class="col-12 col-sm-6 col-xl-3">
        <div class="card bg-dark border-secondary border-opacity-10 rounded-0 h-100 border-start border-4 border-primary">
            <div class="card-body py-3">
                <div class="d-flex justify-content-between">
                    <div>
                        <div class="text-secondary small fw-bold text-uppercase" style="font-size: 0.65rem; letter-spacing: 1px;">Efetivo Total</div>
                        <div class="h3 fw-bold mb-0 text-white tracking-tight">
                            @Model.TotalColaboradores
                        </div>

                    </div>
                    <div class="bg-primary bg-opacity-10 p-2 d-flex align-items-center justify-content-center" style="width: 45px; height: 45px; border-radius: 2px;">
                        <i class="bi bi-people text-primary fs-4"></i>
                    </div>
                </div>
                <div class="mt-2" style="font-size: 0.7rem;">
                    <span class="text-success fw-bold"><i class="bi bi-graph-up-arrow me-1"></i> +12.5%</span>
                    <span class="text-secondary"> vs mês anterior</span>
                </div>
            </div>
        </div>
    </div>

    <div class="col-12 col-sm-6 col-xl-3">
        <div class="card bg-dark border-secondary border-opacity-10 rounded-0 h-100 border-start border-4 border-success">
            <div class="card-body py-3">
                <div class="d-flex justify-content-between">
                    <div>
                        <div class="text-secondary small fw-bold text-uppercase" style="font-size: 0.65rem; letter-spacing: 1px;">Presentes Hoje</div>
                        <div class="h3 fw-bold mb-0 text-white tracking-tight">
                            @Model.PresentesHoje
                        </div>

                    </div>
                    <div class="bg-success bg-opacity-10 p-2 d-flex align-items-center justify-content-center" style="width: 45px; height: 45px; border-radius: 2px;">
                        <i class="bi bi-calendar-check text-success fs-4"></i>
                    </div>
                </div>
                <div class="mt-2 text-secondary" style="font-size: 0.7rem;">
                    <span class="text-white fw-bold">95.2%</span> de aderência ao turno
                </div>
            </div>
        </div>
    </div>

    <div class="col-12 col-sm-6 col-xl-3">
        <div class="card bg-dark border-secondary border-opacity-10 rounded-0 h-100 border-start border-4 border-warning">
            <div class="card-body py-3">
                <div class="d-flex justify-content-between">
                    <div>
                        <div class="text-secondary small fw-bold text-uppercase" style="font-size: 0.65rem; letter-spacing: 1px;">Férias Programadas</div>
                        <div class="h3 fw-bold mb-0 text-white tracking-tight">
                            @Model.FeriasProgramadas.ToString("D2")
                        </div>
                    </div>
                    <div class="bg-warning bg-opacity-10 p-2 d-flex align-items-center justify-content-center" style="width: 45px; height: 45px; border-radius: 2px;">
                        <i class="bi bi-sun text-warning fs-4"></i>
                    </div>
                </div>
                <div class="mt-2 text-secondary" style="font-size: 0.7rem;">
                    Próxima saída em <span class="text-white fw-bold">48 horas</span>
                </div>
            </div>
        </div>
    </div>

    <div class="col-12 col-sm-6 col-xl-3">
        <div class="card bg-dark border-secondary border-opacity-10 rounded-0 h-100 border-start border-4 border-danger">
            <div class="card-body py-3">
                <div class="d-flex justify-content-between">
                    <div>
                        <div class="text-secondary small fw-bold text-uppercase" style="font-size: 0.65rem; letter-spacing: 1px;">Alertas de Ponto</div>
                        <div class="h3 fw-bold mb-0 text-white tracking-tight">
                            @Model.AlertasPonto.ToString("D2")
                        </div>

                    </div>
                    <div class="bg-danger bg-opacity-10 p-2 d-flex align-items-center justify-content-center" style="width: 45px; height: 45px; border-radius: 2px;">
                        <i class="bi bi-exclamation-triangle text-danger fs-4"></i>
                    </div>
                </div>
                <div class="mt-2 text-danger fw-bold" style="font-size: 0.7rem;">
                    Ação imediata recomendada
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card bg-dark border-secondary border-opacity-10 rounded-0 mb-4 shadow-sm h-100">
            <div class="card-header bg-transparent border-bottom border-secondary border-opacity-10 py-3">
                <h6 class="m-0 fw-bold text-white-50 small text-uppercase"><i class="bi bi-lightning-charge-fill me-2 text-primary"></i>Centro de Comandos</h6>
            </div>
            <div class="card-body p-4">
                <div class="row g-3">
                    <div class="col-6 col-md-3">
                        <a asp-controller="Colaborador" asp-action="Index" class="btn btn-action-quick w-100 py-4">
                            <i class="bi bi-person-plus d-block fs-2 mb-2"></i>
                            <span class="small fw-bold text-uppercase">Admitir</span>
                        </a>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Ponto" asp-action="Registro" class="btn btn-action-quick w-100 py-4">
                            <i class="bi bi-clock-history d-block fs-2 mb-2"></i>
                            <span class="small fw-bold text-uppercase">Ponto</span>
                        </a>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Folha" asp-action="Calculo" class="btn btn-action-quick w-100 py-4">
                            <i class="bi bi-calculator d-block fs-2 mb-2"></i>
                            <span class="small fw-bold text-uppercase">Folha</span>
                        </a>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Justificativas" asp-action="Index" class="btn btn-action-quick w-100 py-4">
                            <i class="bi bi-file-earmark-medical d-block fs-2 mb-2"></i>
                            <span class="small fw-bold text-uppercase">Eventos</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card bg-dark border-secondary border-opacity-10 rounded-0 shadow-sm h-100">
            <div class="card-header bg-transparent border-bottom border-secondary border-opacity-10 py-3">
                <h6 class="m-0 fw-bold text-white-50 small text-uppercase"><i class="bi bi-broadcast me-2 text-primary"></i>Comunicados</h6>
            </div>
            <div class="card-body p-0">
                <div class="list-group list-group-flush bg-transparent">
                    <div class="list-group-item bg-transparent border-bottom border-secondary border-opacity-10 p-3">
                        <div class="d-flex justify-content-between mb-1">
                            <span class="small text-primary fw-bold text-uppercase" style="font-size: 0.6rem;">Sistema</span>
                            <span class="small text-secondary font-monospace" style="font-size: 0.65rem;">20/01/2026</span>
                        </div>
                        <div class="fw-bold text-white small mb-1">Manutenção Crítica</div>
                        <p class="text-secondary mb-0" style="font-size: 0.75rem;">Módulo de Folha em atualização preventiva às 18:00.</p>
                    </div>
                    <div class="list-group-item bg-transparent border-bottom border-secondary border-opacity-10 p-3">
                        <div class="d-flex justify-content-between mb-1">
                            <span class="small text-success fw-bold text-uppercase" style="font-size: 0.6rem;">Benefícios</span>
                            <span class="small text-secondary font-monospace" style="font-size: 0.65rem;">18/01/2026</span>
                        </div>
                        <div class="fw-bold text-white small mb-1">Recadastramento Plano</div>
                        <p class="text-secondary mb-0" style="font-size: 0.75rem;">Prazo final para atualização de dependentes no portal.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>