@model IEnumerable<SuperRH.Models.Historico>

<div class="p-4">
    @if (Model.Any())
    {
        <div class="timeline-container ps-3 border-start border-secondary border-opacity-25">
            @foreach (var item in Model)
            {
                <div class="timeline-item mb-4 position-relative cursor-pointer"
                     onclick="verDetalhesHistorico(@item.idHistorico)">

                    <div class="position-absolute bg-primary"
                         style="width:12px;height:12px;left:-31px;top:6px;border-radius:2px"></div>

                    <div class="d-flex justify-content-between mb-1">
                        <span class="text-primary small fw-bold text-uppercase">@item.Categoria</span>
                        <span class="text-secondary font-monospace" style="font-size:0.7rem">
                            @item.DataEvento.ToString("dd/MM/yyyy")
                        </span>
                    </div>

                    <h6 class="text-white fw-bold mb-1">
                        <i class="bi bi-exclamation-diamond me-1 text-warning"></i>
                        @item.Titulo
                    </h6>

                    <p class="text-secondary small mb-0">@item.Descricao</p>

                    <div class="mt-2 text-end" style="font-size:0.65rem;color:#666">
                        Registrado por @(item.UsuarioResponsavel ?? "Sistema")
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center py-5 text-secondary">
            Nenhum evento registrado.
        </div>
    }
</div>
