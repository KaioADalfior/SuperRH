@model IEnumerable<SuperRH.Models.Historico>

<div class="p-4">
    @if (Model != null && Model.Any())
    {
        <div class="timeline-container ps-3 border-start border-secondary border-opacity-25">
            @foreach (var item in Model)
            {
                <div class="timeline-item mb-4 position-relative">
                    @* Ponto na linha *@
                    <div class="position-absolute bg-primary" style="width: 12px; height: 12px; left: -31px; top: 5px; border-radius: 2px;"></div>

                    <div class="d-flex justify-content-between align-items-start mb-1">
                        <span class="text-primary small fw-bold text-uppercase">@item.Categoria</span>
                        <span class="text-secondary font-monospace" style="font-size: 0.7rem;">@item.DataEvento.ToString("dd/MM/yyyy")</span>
                    </div>

                    <h6 class="text-white fw-bold mb-1">@item.Titulo</h6>
                    <p class="text-secondary small mb-0">@item.Descricao</p>

                    <div class="mt-2 text-end" style="font-size: 0.65rem; color: #444;">
                        Registrado por: @(item.UsuarioResponsavel ?? "Sistema") em @item.DataRegistro.ToString("g")
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <i class="bi bi-clock-history fs-1 text-secondary opacity-25 d-block mb-3"></i>
            <p class="text-secondary small text-uppercase fw-bold">Nenhum evento registrado para este colaborador.</p>
        </div>
    }

    <div class="mt-4 text-center border-top border-secondary border-opacity-10 pt-3">
        <button type="button" class="btn btn-outline-secondary btn-sm rounded-0 text-uppercase fw-bold" data-bs-dismiss="modal">Fechar</button>
    </div>
</div>