@model SuperRH.Models.Funcionario
<form id="formEditFuncionario" asp-action="Edit" method="post" class="p-4">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="idFuncionario" />

    @* ... Mesma estrutura de campos da Create ... *@

    <div class="col-12 mt-5 border-top border-secondary border-opacity-10 pt-3 text-end">
        <button type="button" class="btn btn-link text-secondary text-decoration-none me-3 small fw-bold text-uppercase" data-bs-dismiss="modal">Cancelar</button>
        <button type="submit" class="btn btn-primary rounded-0 px-5 py-2 fw-bold text-uppercase small shadow-sm">
            Atualizar Dados
        </button>
    </div>
</form>

<script>
    $("#formEditFuncionario").off("submit").on("submit", function (e) {
        e.preventDefault();
        const form = $(this);
        $.post(form.attr("action"), form.serialize(), function () {
            modalFunc.hide();
            window.location.reload();
        });
    });
</script>