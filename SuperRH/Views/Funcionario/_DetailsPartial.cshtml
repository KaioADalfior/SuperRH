@model SuperRH.Models.Funcionario

<div class="p-4">
    <div class="d-flex align-items-center mb-4 pb-4 border-bottom border-secondary border-opacity-10">
        <div class="avatar-square me-4 bg-primary bg-opacity-10 border border-primary border-opacity-25 d-flex align-items-center justify-content-center text-primary fw-bold" style="width: 100px; height: 100px; font-size: 2.5rem;">
            @Model.NomeCompleto.Substring(0, 1).ToUpper()
        </div>
        <div>
            <h3 class="text-white fw-bold mb-0 text-uppercase tracking-tight">@Model.NomeCompleto</h3>
            <p class="text-primary mb-0 fw-bold small">MATRÍCULA: #@Model.idFuncionario.ToString("D4")</p>
            <span class="status-pill active mt-2 d-inline-block text-uppercase">Vínculo Ativo</span>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-md-6">
            <label class="text-secondary small fw-bold text-uppercase d-block mb-1">Documentação</label>
            <div class="text-white">CPF: <span class="font-monospace">@Model.CPF</span></div>
            <div class="text-white">RG: <span class="font-monospace">@Model.RG (@Model.OrgaoEmissor)</span></div>
        </div>
        <div class="col-md-6">
            <label class="text-secondary small fw-bold text-uppercase d-block mb-1">Nascimento & Gênero</label>
            <div class="text-white">@Model.DataNascimento.ToString("dd MMMM, yyyy")</div>
            <div class="text-white">Gênero: @(Model.Sexo == "M" ? "Masculino" : "Feminino")</div>
        </div>
        <div class="col-md-6">
            <label class="text-secondary small fw-bold text-uppercase d-block mb-1">Filiação (Mãe)</label>
            <div class="text-white">@Model.NomeMae</div>
        </div>
        <div class="col-md-6">
            <label class="text-secondary small fw-bold text-uppercase d-block mb-1">Cadastro no Sistema</label>
            <div class="text-white small">Registrado em @Model.DataCadastro.ToString("dd/MM/yyyy HH:mm")</div>
        </div>
    </div>

    <div class="mt-5 pt-3 border-top border-secondary border-opacity-10 text-center">
        <button type="button" class="btn btn-outline-secondary rounded-0 btn-sm px-5 text-uppercase fw-bold" data-bs-dismiss="modal">Fechar Ficha</button>
    </div>
</div>