@{
    ViewData["Title"] = "Novo Usuário";
}

<nav aria-label="breadcrumb" class="mb-2">
    <ol class="breadcrumb mb-0">
        <li class="breadcrumb-item small text-uppercase"><a href="/" class="text-secondary text-decoration-none">Dashboard</a></li>
        <li class="breadcrumb-item small text-uppercase"><a asp-action="Index" class="text-secondary text-decoration-none">Usuários</a></li>
        <li class="breadcrumb-item small text-uppercase active text-primary" aria-current="page">Novo Cadastro</li>
    </ol>
</nav>

<div class="mb-4">
    <a asp-action="Index" class="btn btn-sm btn-outline-secondary rounded-0 border-opacity-25 text-uppercase fw-bold" style="font-size: 0.7rem;">
        <i class="bi bi-chevron-left me-1"></i> Retornar à Listagem
    </a>
</div>

<div class="d-flex justify-content-between align-items-end mb-4">
    <div>
        <h3 class="fw-bold mb-0 text-white text-uppercase tracking-tight">Provisionamento de Acesso</h3>
        <p class="text-secondary mb-0 small">Preencha os campos abaixo para criar uma nova identidade no sistema.</p>
    </div>
</div>

<div class="card bg-dark border-secondary border-opacity-10 rounded-0 shadow-lg">
    <div class="card-header bg-transparent border-bottom border-secondary border-opacity-10 py-3">
        <h6 class="mb-0 text-white-50 small fw-bold text-uppercase"><i class="bi bi-info-circle me-2"></i>Parâmetros do Usuário</h6>
    </div>
    <div class="card-body p-4">
        <form asp-action="Create" method="post" autocomplete="off">
            @Html.AntiForgeryToken()

            <div class="row g-4">
                <div class="col-md-8">
                    <label class="form-label text-secondary small fw-bold text-uppercase mb-1">Nome Identificador</label>
                    <input type="text" name="NomeCompleto" class="form-control bg-transparent border-secondary border-opacity-25 text-white rounded-0 py-2 custom-input" placeholder="Ex: João Silva" required>
                </div>

                <div class="col-md-4">
                    <label class="form-label text-secondary small fw-bold text-uppercase mb-1">Privilégio de Sistema</label>
                    <select name="NivelAcesso" class="form-select bg-transparent border-secondary border-opacity-25 text-secondary rounded-0 py-2 custom-input" required>
                        <option value="" selected disabled>Escolha um nível...</option>
                        <option value="Admin">Administrador</option>
                        <option value="Gerente">Gerente</option>
                        <option value="Operador">Operador</option>
                    </select>
                </div>

                <div class="col-md-6">
                    <label class="form-label text-secondary small fw-bold text-uppercase mb-1">Identidade de Login</label>
                    <div class="input-group">
                        <span class="input-group-text bg-secondary bg-opacity-10 border-secondary border-opacity-25 text-secondary rounded-0">@@</span>
                        <input type="text" name="Login" class="form-control bg-transparent border-secondary border-opacity-25 text-white rounded-0 py-2 custom-input" placeholder="usuario.exemplo" required>
                    </div>
                </div>

                <div class="col-md-6">
                    <label class="form-label text-secondary small fw-bold text-uppercase mb-1">E-mail Institucional</label>
                    <input type="email" name="Email" class="form-control bg-transparent border-secondary border-opacity-25 text-white rounded-0 py-2 custom-input" placeholder="nome@digitalnet.com.br">
                </div>

                <div class="col-12 my-2">
                    <hr class="border-secondary border-opacity-10">
                    <small class="text-primary text-uppercase fw-bold" style="font-size: 0.65rem; letter-spacing: 1px;">Segurança e Autenticação</small>
                </div>

                <div class="col-md-6">
                    <label class="form-label text-secondary small fw-bold text-uppercase mb-1">Chave de Acesso</label>
                    <input type="password" name="SenhaHash" class="form-control bg-transparent border-secondary border-opacity-25 text-white rounded-0 py-2 custom-input" required>
                </div>

                <div class="col-md-6">
                    <label class="form-label text-secondary small fw-bold text-uppercase mb-1">Confirmação de Chave</label>
                    <input type="password" class="form-control bg-transparent border-secondary border-opacity-25 text-white rounded-0 py-2 custom-input" required>
                </div>

                <div class="col-12 mt-5 pt-3 border-top border-secondary border-opacity-10 d-flex align-items-center">
                    <button type="submit" class="btn btn-primary rounded-0 px-5 py-2 fw-bold text-uppercase small shadow-sm">
                        <i class="bi bi-shield-check me-2"></i> Finalizar Cadastro
                    </button>
                    <a asp-action="Index" class="btn btn-link text-secondary text-decoration-none ms-3 small text-uppercase fw-bold">Cancelar</a>
                </div>
            </div>
        </form>
    </div>
</div>