@model SuperRH.Models.Usuario

<div class="p-4 text-center">
    <div class="avatar-square mx-auto mb-3 bg-primary bg-opacity-10 border border-primary border-opacity-25 d-flex align-items-center justify-content-center text-primary fw-bold" style="width: 80px; height: 80px; font-size: 2rem;">
        @model.NomeCompleto.Substring(0, 1).ToUpper()
    </div>
    <h4 class="text-white fw-bold mb-1">@Model.NomeCompleto</h4>
    <p class="text-primary small fw-bold text-uppercase mb-4">@Model.NivelAcesso</p>

    <div class="row g-3 text-start border-top border-secondary border-opacity-10 pt-4">
        <div class="col-6">
            <label class="text-secondary small fw-bold text-uppercase d-block">Identificador</label>
            <span class="text-white">@@@Model.Login</span>
        </div>
        <div class="col-6">
            <label class="text-secondary small fw-bold text-uppercase d-block">Status</label>
            <span class="text-success small fw-bold">● ATIVO</span>
        </div>
        <div class="col-12">
            <label class="text-secondary small fw-bold text-uppercase d-block">E-mail Corporativo</label>
            <span class="text-white">@Model.Email</span>
        </div>
    </div>
    
    <div class="mt-5">
        <button type="button" class="btn btn-outline-secondary rounded-0 btn-sm px-4 text-uppercase fw-bold" data-bs-dismiss="modal">Fechar</button>
    </div>
</div>