@model SuperRH.Models.Usuario
<form asp-action="Create" method="post" class="p-3">
    @Html.AntiForgeryToken()
    <div class="row g-3">
        <div class="col-md-8">
            <label class="text-secondary small fw-bold text-uppercase">Nome Identificador</label>
            <input asp-for="NomeCompleto" class="form-control bg-transparent border-secondary border-opacity-25 text-white rounded-0" required />
        </div>
        <div class="col-md-4">
            <label class="text-secondary small fw-bold text-uppercase">Nível</label>
            <select asp-for="NivelAcesso" class="form-select bg-transparent border-secondary border-opacity-25 text-white rounded-0">
                <option value="Admin">Admin</option>
                <option value="Gerente">Gerente</option>
                <option value="Operador">Operador</option>
            </select>
        </div>
        <div class="col-md-6">
            <label class="text-secondary small fw-bold text-uppercase">Login</label>
            <input asp-for="Login" class="form-control bg-transparent border-secondary border-opacity-25 text-white rounded-0" required />
        </div>
        <div class="col-md-6">
            <label class="text-secondary small fw-bold text-uppercase">Senha</label>
            <input type="password" asp-for="SenhaHash" class="form-control bg-transparent border-secondary border-opacity-25 text-white rounded-0" required />
        </div>
        <div class="col-12 text-end mt-4">
            <button type="submit" class="btn btn-primary rounded-0 px-4">SALVAR</button>
        </div>
    </div>
</form>